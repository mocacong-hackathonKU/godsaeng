<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="proofItem"
            type="com.mocacong.godsaeng.data.Proof" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/profileImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_rectangle"
            android:backgroundTint="@color/gray_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/profileImgView"
            app:layout_constraintBottom_toBottomOf="@id/profileImgView"
            app:layout_constraintStart_toEndOf="@id/profileImgView"
            android:layout_marginStart="20dp"
            android:text="@{proofItem.nickname}"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shape_round_rectangle"
            android:backgroundTint="@color/gray_2"
            android:id="@+id/proofImgView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileImgView"
            app:layout_constraintDimensionRatio="2:1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/proofImgView"
            app:layout_constraintStart_toStartOf="@id/proofImgView"
            app:layout_constraintEnd_toEndOf="@id/proofImgView"
            android:padding="10dp"
            android:text="@{proofItem.proofDetail}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>